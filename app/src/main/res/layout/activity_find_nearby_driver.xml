<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FindNearbyDriverActivity">

    <include layout="@layout/toolbar_layout"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@drawable/round_border">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Find Nearby Local Guide"
               android:gravity="center"
               android:padding="15dp"
               android:textSize="25sp"
               android:fontFamily="@font/helveticaneuecyr_bold"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="15dp"
               android:padding="10dp"
               >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Yayy, we found you a local guide!"
                   android:gravity="center"
                   android:textSize="20sp"
                   android:padding="5dp"/>

               <ImageView
                   android:id="@+id/findNearbyGuide_photo"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:padding="10dp"
                   android:src="@drawable/ronel"
                   tools:srcCompat="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Scott Llang"
                   android:padding="10dp"
                   android:textSize="25sp"
                   android:textColor="@color/cardview_dark_background"
                   android:fontFamily="@font/robotobold"
                   android:gravity="center"/>

               <RatingBar
                   android:id="@+id/driver_rating"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:numStars="5"
                   />

               <View
                   android:layout_width="300dp"
                   android:layout_height="1dp"
                   android:padding="5dp"
                   android:layout_gravity="center"
                   android:layout_margin="5dp"
                   android:background="@color/colorPrimaryDark"
                   />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@drawable/round_border">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Driver Information"
                       android:gravity="center"
                       android:textSize="25sp"
                       android:fontFamily="@font/robotocondensedbold"/>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center_horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Plate #:"
                           android:textSize="18sp"/>
                       <TextView
                           android:id="@+id/findNearbyGuide_plateNumber"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="AAJ8008"
                           android:textSize="18sp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center_horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Car Type:"
                           android:textSize="18sp"/>
                       <TextView
                           android:id="@+id/findNearbyGuide_cartype"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Toyota HiAce"
                           android:textSize="18sp"/>
                   </LinearLayout>

               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Name :"
                       android:textSize="18sp"/>
                   <TextView
                       android:id="@+id/findNearbyGuide_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Ronel Dayanan"
                       android:textSize="18sp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Age :"
                       android:textSize="18sp"/>
                   <TextView
                       android:id="@+id/findNearbyGuide_age"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="20"
                       android:textSize="18sp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Address:"
                       android:textSize="18sp"/>
                   <TextView
                       android:id="@+id/findNearbyGuide_address"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sambag 1 Urgello, Cebu City"
                       android:textSize="18sp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Contact #:"
                       android:textSize="18sp"/>
                   <TextView
                       android:id="@+id/findNearbyGuide_contact"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="09466004878"
                       android:textSize="18sp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sex:"
                       android:textSize="18sp"/>
                   <TextView
                       android:id="@+id/findNearbyGuide_sex"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="MALE"
                       android:textSize="18sp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Requirements:"
                       android:textSize="18sp"/>
                   <TextView
                       android:id="@+id/findNearbyGuide_requirements"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Completed"
                       android:textSize="18sp"/>
               </LinearLayout>
           </LinearLayout>
           <View
               android:layout_width="300dp"
               android:layout_height="1dp"
               android:padding="5dp"
               android:layout_gravity="center"
               android:layout_margin="5dp"
               android:background="@color/colorPrimaryDark"
               />

       </LinearLayout>
   </ScrollView>



</LinearLayout>