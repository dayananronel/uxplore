<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/account_category_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_history_grey_400_24dp"/>
    <TextView
        android:id="@+id/account_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"
        android:padding="10dp"
        android:textSize="16sp"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_blue_grey_500_24dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_blue_grey_500_24dp" />
  </LinearLayout>