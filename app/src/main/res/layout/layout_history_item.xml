<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@drawable/round_border"
    android:layout_margin="10dp"
    android:id="@+id/history_parent_item"
    android:padding="15dp">

    <TextView
        android:id="@+id/history_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:gravity="end"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_blue_grey_500_24dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_blue_grey_500_24dp" />
    <TextView
        android:id="@+id/history_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2019-04-08 08:30 am"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:drawableStart="@drawable/indicator"
        android:drawableLeft="@drawable/indicator" />
    <TextView
        android:id="@+id/history_locationPre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Talamban, Cebu City"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/indicator"
        android:drawableLeft="@drawable/indicator" />
    <TextView
        android:id="@+id/history_locationPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Urgello, Cebu City"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:drawableStart="@drawable/indicatordest"
        android:drawableLeft="@drawable/indicatordest" />
</LinearLayout>